.row
  %h1
    = @user.email

- if flash[:alert]
  .alert
    = flash[:alert]
- if flash[:notice]
  .notice
    = flash[:notice]

%h2
  Assigned

#assigned.row
  - @user.roles.each do |role|
    = role_panel role, false

%h2
  Assignable

#unassigned.row
  - @roles.each do |role|
    - unless @user.roles.include? role
      = role_panel role
  
