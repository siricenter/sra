<h1>Listing households</h1>
<article>
<%= button_to 'New Household', new_household_path, class: :button, method: :get %>
<ul>
	<% @households.each do |household| %>
		<li>
		<%= link_to 'X', household, method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;
		<%= link_to household.name, household %>
		</li>
	<% end %>
</ul>

<%= button_to 'New Household', new_household_path, class: :button, method: :get %>
</article>
