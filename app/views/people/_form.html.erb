<%= form_for(@person) do |form| %>
	<%= form.label :given_name %>:
	<%= form.text_field :given_name %><br/>

	<%= form.label :family_name %>:
	<%= form.text_field :family_name %><br/>
	
	<%= form.label :birthday %>:
	<%= form.date_select :birthday %><br/>

	<% edu_options = ['None', 'Some Elementary', 'Elementary', 'Some Secondary', 'Secondary', 'Some College', 'College'] %>

	<%= form.label :education_level %>:
	<%= select :person, :education_level, edu_options %><br/>
	
	<% gender_options = ['Male', 'Female', 'Other'] %>

	<%= form.label :gender %>:
	<%= select :person, :gender, gender_options %><br/>
	
	<%= form.label :arm_circumference %>:
	<%= form.number_field :arm_circumference %><br/>
	
	<%= form.check_box :in_school %>
	<%= form.label :in_school %><br/>
	
	<%= form.check_box :is_alive %>
	<%= form.label :is_alive %> <br/>

	<%= form.submit :submit %>
<% end %>
