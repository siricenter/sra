<article>
<h1>People#index</h1>
<p>Find me in app/views/people/index.html.erb</p>

<%= button_to 'Add New Person', new_person_path, method: :get %>
<br/>

<% @people.each do |person| %>
	<%= link_to "#{person.given_name} #{person.family_name}", person_path(person) %> |
	<%= link_to "Delete", person_path(person), method: :delete, data: {confirm: "Are you sure?"} %>  |
	<%= link_to "Edit", edit_person_path(person) %>
	<br/>
<% end %>
</article>
