         
.row
   .col-sm-8.col-md-6
      .panel.panel-primary
         .panel-heading
            %h3.panel-title
               ="Households"
         .panel-body.index
            %ul
               - @households.each do |household|
                  %li
                     = "#{household.name}"    
                  .alabel   
                     = link_to 'View', household, id: "#{household.id}_show"
                     
                     = link_to 'Edit', edit_household_path(household), id: "#{household.id}_edit"
                     
                     = link_to 'Delete', household, method: :delete, id: "#{household.id}_remove"
                     
                  %li
                     = "Interviews"
                  .alabel
                     - @interview = Interview.where({household_id: household.id})
                     - if @interview.blank?
                        = "None"
                     - else
                        = link_to 'Show in Progress', @interview[0], id: "#{@interview[0].id}_show"


   
   